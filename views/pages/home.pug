                    li.nav-item
                        a.nav-link(href='#')
                            i.fa.fa-info.mr-1
                            | commands
                    li.nav-item
                        a.nav-link(href='#')
                            i.fa.fa-wrench.mr-1
                            | tools
        .d-flex.flex-grow.no-overflow#react-root
